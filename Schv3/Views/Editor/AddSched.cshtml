@model int
@{
    ViewData["Title"] = "Добавление расписания";

}

<div>
    <div>
        <button>
            Добавить дисциплину
        </button>
        <button>
            Добавить группу
        </button>
        <button>
            Добавить преподавателя
        </button>
    </div>
    <div>
        <label for="subject_name">Выберите дисциплину:</label>
        <input class="rounded-pill" list="subject_list" id="subject" name="subject_name">
        <datalist id="subject_list">
            <option value="Web-Технологии"></option>
            <option value="Методы исследования операций"></option>
            <option value="Моделирование систем"></option>
        </datalist>
    </div>
    <div>
        <label for="group_name">Выберите группу:</label>
        <input class="rounded-pill" list="group_list" id="group" name="group_name">
        <datalist id="group_list">
            <option value="ИС"></option>
            <option value="ПИ"></option>
            <option value="УТС"></option>
        </datalist>
    </div>
    <div>
        <label for="teacher_name">Выберите преподавателя:</label>
        <input class="rounded-pill" list="teacher_list" id="teacher" name="teacher_name">
        <datalist id="teacher_list">
            <option value="Карлусов В.Ю."></option>
            <option value="Хохлов В.В."></option>
            <option value="Дрозин А.Ю."></option>
        </datalist>
    </div>
    <div>
        <label for="lesson_date">Дата пары:</label>
        <input type="date" id="lessonDate" name="lessonDate">
    </div>
    <div>
        <label for="practicLesson">
            Практическое занятие
        </label>
        <input type="radio" name="type" value="PL" id="practicLesson" />
        <label for="labLesson">
            Лабораторное занятие
        </label>
        <input type="radio" name="type" value="LL" id="labLesson" />
        <label for="lecture">
            Лекция
        </label>
        <input type="radio" name="type" value="L" id="lecture" />
    </div>
    <div>
        <label for="lesson">Номер пары</label>
        <input type="range" min="0" max="8" step="1" id="lesson">
    </div>
    <div>
        <input type="text" id="commentary" placeholder="Добавить комментарий" />
    </div>
    <div>
        <button>
            Добавить
        </button>
    </div>

</div>
