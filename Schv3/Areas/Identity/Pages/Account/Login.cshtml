@page
@model LoginModel
<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Вход";
}

<div class="login justify-content-center">
    <h1>@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-4 justify-content-center">
            <section class="justify-content-center">
                <form id="account" method="post" class="justify-content-center">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Электронная почта</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Пароль</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Запомнить аккаунт
                        </label>
                    </div>
                    <div class="button_div">
                        <button id="login-submit" type="submit" class="w-50 btn btn-lg btn-primary">Войти</button>
                    </div>
                    <div class="additional">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Забыли свой пароль?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Зарегестрироваться</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Повторно отправить подтверждение на почту</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
